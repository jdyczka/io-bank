<Window x:Class="BankProducts.View.AddCardToClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankProducts.View"
        mc:Ignorable="d"
        Title="Dodawanie karty do konta" Height="300" Width="300">
    <Grid>
        <Label x:Name="NumerKonta" Content="Numer konta do przypisania karty:" HorizontalAlignment="Center" Margin="22,1,0,243"/>
        <Label x:Name="PIN" Content="PIN:" HorizontalAlignment="Center" Margin="130,140,131,104" RenderTransformOrigin="0.516,1.537"/>

        <ListView x:Name="NumerKontaText" HorizontalAlignment="Center" Height="104" Margin="22,31,17,0" VerticalAlignment="Top" Width="253" />
        <TextBox x:Name="PINText" HorizontalAlignment="Center" Height="24" Margin="104,170,106,0" VerticalAlignment="Top" Width="82"/>

        <Button x:Name="AddCardConfirm" Content="Dodaj" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Margin="10" Click="AddCardConfirm_Click"/>
        <Button x:Name="CancelAddingCard" Content="Anuluj" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="80" Margin="10" Click="CancelAddingCard_Click"/>
    </Grid>
</Window>
